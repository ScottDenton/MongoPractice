  <%= form_for @exercise do |f| %>
    <div class="form-group">
      <%= f.label :name, "Exercise Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :weight, "Weight(lbs)" %>
      <%= f.number_field :weight, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :reps %>
      <%= f.number_field :reps, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :sets %>
      <%= f.number_field :sets, class: "form-control" %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :workout_id, value: @workout.id %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
